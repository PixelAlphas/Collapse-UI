{ "namespace": "cui-hud_screen",
  "root_contents": {
    "type": "panel",
    "controls": [
      {
        "@cui-hud_screen.statistics": {}
      }/*,
      {
        "@cui-hud_screen.exp_percentage_panel": {}
      },
      {
        "@cui-hud_screen.exp_percentage_test": {}
      }*/
      // Had a painful time doing a math, so...
      // Screw Experience calculation and stuff, not adding it.
  ]},
  "statistics": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [ "50%", "100%c" ],
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "offset": [ -2, -2 ],
    "use_child_anchors": true,
    "controls": [
      { "@number_of_days_played": {}},
      { "padding": { "type": "panel", "size": [ 2, 1 ]}},
      { "@player_position": {}}
  ]},
  "number_of_days_played": {
    "type": "image",
    "size": [ "100%c + 12px", "100%c + 8px" ],
    "texture": "textures/ui/.cui-assets/background_middle",
    "alpha": "$cuigv:BackgroundAlpha",
    "color": "$cuigv:SecondaryColor",
    "anchor_from": "right_middle",
    "anchor_to": "right_middle",
    "bindings": [
      { "binding_name": "#number_of_days_played_visible",
        "binding_name_override": "#visible",
        "binding_condition": "always",
        "binding_type": "global"
    }],
    "controls": [
      { "number_of_days_played_text": {
          "type": "label",
          "layer": 1,
          "enable_profanity_filter": false,
          "color": "$cuigv:FontPrimaryColor",
          "text": "#text",
          "shadow": false,
          "bindings": [
            { "binding_name": "#number_of_days_played_text",
              "binding_name_override": "#text",
              "binding_condition": "always_when_visible",
              "binding_type": "global"
          }]
      }}
  ]},
  "player_position": {
    "type": "image",
    "size": [ "100%c + 12px", "100%c + 8px" ],
    "texture": "textures/ui/.cui-assets/background_middle",
    "alpha": "$cuigv:BackgroundAlpha",
    "color": "$cuigv:SecondaryColor",
    "anchor_from": "right_middle",
    "anchor_to": "right_middle",
    "bindings": [
      { "binding_name": "#player_position_visible",
        "binding_name_override": "#visible",
        "binding_condition": "always",
        "binding_type": "global"
    }],
    "controls": [
      { "player_position_text": {
          "type": "label",
          "layer": 1,
          "enable_profanity_filter": false,
          "color": "$cuigv:FontPrimaryColor",
          "text": "#text",
          "shadow": false,
          "bindings": [
            { "binding_name": "#player_position_text",
              "binding_name_override": "#text",
              "binding_condition": "always_when_visible",
              "binding_type": "global"
          }]
      }}
  ]},
  "item_text_factory": {
    "size": [ 100, 10 ],
    "type": "factory",
    "control_ids": {
      "item_text": "@cui-hud_screen.item_name_text",
      "jukebox_text": "@hud.jukebox_popup_text"
  }},
  "item_name_text": {
    "type": "panel",
    "size": [ "100%cm", "100%cm" ],
    "max_size": [ 200, 10 ],
    "offset": [ 0, "50%-58px" ],
    "$wait_duration|default": 1,
    "$destroy_id|default": "item_name_text",
    "anchor_from": "bottom_middle",
		"anchor_to": "bottom_middle",
		"anims": [
			"@cui-anims.hud_tooltip_alpha",
			"@cui-anims.hud_tooltip_item"
		],
		"controls": [
		  { "item_text_background": {
          "type": "image",
          "size": [ "100%sm + 12px", "100%sm + 9px" ],
          "texture": "textures/ui/.cui-assets/background",
          "color": "$cuigv:SecondaryColor",
          "alpha": "@hud.anim_item_name_background_alpha_in"
      }},
      { "item_text_label": {
          "type": "label",
          "text": "#text",
          "max_size": [ 200, 8 ],
          "alpha": 0,
          "clips_children": true,
          "enable_profanity_filter": false,
          "font_scale_factor": 0.8,
          "bindings": [
            { "binding_name": "#item_text",
              "binding_name_override": "#text"
          }],
          "controls": [
            { "extra_text": {
                "type": "label",
                "text_alignment": "center",
                "layer": 5,
                "max_size": [ 200, "default" ],
                "font_scale_factor": 0.8,
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "color": "$cuigv:FontPrimaryColor",
                "text": "#text",
                "alpha": "@hud.anim_item_name_text_alpha_in",
                "clips_children": true,
                "enable_profanity_filter": false,
                "bindings": [
                  { "binding_name": "#item_text",
                    "binding_name_override": "#text"
                }]
            }}
      ]}}
  ]},
  "hud_tip_text": {
		"type": "image",
		"size": [ "100%c + 12px", "100%c + 5px" ],
		"offset": [ 0, "50%-55px" ],
		"anchor_from": "center",
		"anchor_to": "center",
		"texture": "textures/ui/hud_tip_text_background",
		"alpha": "@hud.anim_item_name_background_alpha_out",
		"$wait_duration|default": 1,
		"$destroy_id|default": "popup_tip_text",
		"anims": [
			"@cui-anims.hud_tooltip_alpha",
			"@cui-anims.hud_tooltip_item"
		],
		"controls": [
		  { "item_text_label": {
			    "type": "label",
			    "layer": 10,
			    "color": "$cuigv:FontPrimaryColor",
			    "text": "#text",
			    "shadow": false,
			    "alpha": "@hud.anim_item_name_text_alpha_out",
			    "bindings": [
				    { "binding_name": "#tip_text",
				      "binding_name_override": "#text"
				  }]
		  }}
  ]}
}