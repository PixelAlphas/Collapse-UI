{ "namespace": "cui-search_section",
  "root_contents": {
    "type": "panel",
    "$scrolling_content": "cui-search_section.core_element",
    "controls": [
      { "@cui-play_screen.general_scroll_contents": {}}
  ]},
  
  "world_search_grid": {
    "type": "stack_panel",
    "orientation": "vertical",
    "collection_name": "local_worlds",
    "factory": {
      "name": "local_worlds",
      "control_name": "cui-search_section.world_search"
    },
    "bindings": [
      { "binding_name": "#world_item_count", "binding_type": "global" },
      { "binding_type": "view",
        "source_property_name": "(#world_item_count - 'h')",
        "target_property_name": "#collection_length"
      }
    ]
  },
  
  "world_search@cui-worlds_section.local_world_item": {
    "$collection_name": "servers_network_worlds",
    "bindings": [
      { "binding_name": "#local_world_name",
        "binding_type": "collection",
        "binding_collection_name": "local_worlds"
      },
      { "binding_type": "view",
        "source_control_name": "string_world",
        "source_property_name": "#item_name",
        "target_property_name": "#world_search_string"
      },
      { "binding_type": "view",
        "source_property_name": "(not (((#local_world_name - #world_search_string) = #local_world_name) - ' ' - '§r' - '§f'))",
        "target_property_name": "#visible"
  }]},
  "server_search_grid": {
    "type": "stack_panel",
    "orientation": "vertical",
    "collection_name": "servers_network_worlds",
    "factory": {
      "name": "servers_network_worlds",
      "control_name": "cui-search_section.server_search"
    },
    "bindings": [
      { "binding_name": "#server_world_item_count", "binding_type": "global" },
      { "binding_type": "view",
        "source_property_name": "(#server_world_item_count - 'h')",
        "target_property_name": "#collection_length"
      }
    ]
  },
  "server_search@cui-servers_section.server_item_template": {
    "$collection_name": "servers_network_worlds",
    "$cuiv:is_public_server": true,
    "bindings": [
      { "binding_name": "#network_world_header",
        "binding_type": "collection",
        "binding_collection_name": "servers_network_worlds"
      },
      { "binding_type": "view",
        "source_control_name": "string_world",
        "source_property_name": "#item_name",
        "target_property_name": "#world_search_string"
      },
      { "binding_type": "view",
        "source_property_name": "(not (((#network_world_header - #world_search_string) = #network_world_header) - ' ' - '§r' - '§f'))",
        "target_property_name": "#visible"
  }]},
  "core_element": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [ "100%", "100%c" ],
    "use_child_anchors": true,
    "controls": [
      { "control_centre_label@cui-common.header": { "$cuiv:header_text": "cui.play.search" }},
      { "padding_09": { "type": "panel", "size": [ "100%", 2 ], "ignored": "(not $cuigv:SearchBoxSystem)"}},
      { "search_bar@cui-common.text_box": { "$cuiv:placeholder_text": "Search World (Case sensitive)", "$cuiv:text_edit_text_control": "string_world", "size": [ "100%", 20 ], "ignored": "(not $cuigv:SearchBoxSystem)"}},
      { "test_grid@cui-search_section.world_search_grid": {}},
      { "test_grid@cui-search_section.server_search_grid": {}}
]}}